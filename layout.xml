<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/perfil_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:layout_marginTop="18sp"
                android:background="#eeeeee"
                android:layout_alignParentTop="true"
                android:hint="@string/prompt_name"
                android:maxLines="1"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/edit_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background = "#eeeeee"
                android:layout_below="@id/edit_nome"
                android:hint="@string/prompt_email"
                android:maxLines="1"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/cpf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background="#eeeeee"
                android:layout_below="@id/edit_email"
                android:hint="@string/cpf"
                android:maxLines="1"
                android:textSize="30sp" />
            <EditText
                android:id="@+id/telefone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background="#eeeeee"
                android:layout_below="@id/cpf"
                android:hint="@string/cpf"
                android:maxLines="1"
                android:textSize="30sp" />



            <EditText
                android:id="@+id/senha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background="#eeeeee"
                android:layout_below="@id/telefone"
                android:hint="Senha"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/botao_trocarSenha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#eeeeeee"
                android:layout_below="@id/senha"
                android:text="Trocar Senha"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/num-cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background="#eeeeee"
                android:layout_below="@id/botao_trocarSenha"
                android:hint="@string/numCartao"
                android:maxLines="1"
                android:textSize="30sp" />
            <EditText
                android:id="@+id/nome_cartao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background="#eeeeee"
                android:layout_below="@id/num-cartao"
                android:hint="@string/nomeCartao"
                android:maxLines="1"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/prazoDeValidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background="#eeeeee"
                android:layout_below="@id/nome_cartao"
                android:hint="@string/valCartao"
                android:maxLines="1"
                android:textSize="18sp" />
            <EditText
                android:id="@+id/cod_seguranca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18sp"
                android:background="#eeeeee"
                android:layout_below="@id/prazoDeValidade"
                android:hint="@string/codSegu"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="18sp" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
