<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id = "@+id/saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saldo"
                android:layout_marginTop="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="32dp"
                android:textSize="31sp"
                android:textColor="#000000" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/saldoNum"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="@string/valorFalso"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="40sp"
                    android:textColor="#000000"/>

                <Button
                    android:id = "@+id/botao_addSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:text="@string/mais"
                    android:textSize="35sp"
                    android:background="#eeeeee"/>
            </LinearLayout>
            <TextView
                android:id="@+id/resumo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resumo"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="32dp"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/resumoFic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consumoFalso"
                android:textColor="#F44336"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="16dp"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
